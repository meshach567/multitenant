generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  BUSINESS_OWNER
  STAFF
  CUSTOMER
}

model User {
  id            String   @id  @default(uuid())
  email         String   @unique
  passwordHash  String
  role          UserRole
  businessId    String?
  business      Business? @relation(fields: [businessId], references: [id])
  createdAt     DateTime  @default(now())
}

model Business {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  timezone  String
  currency  String
  users     User[]
  createdAt DateTime @default(now())
}
